[bar/flat]
inherit = colors

monitor = ${env:Monitor}
fixed-center = true
width = 100%
height = 32
offset-x = 0
offset-y = 0

radius = 0
line-size = 2
line-color = #cfd8dc
padding-left = 0
padding-right = 1
module-margin = 1

; Fonts are defined using <font-name>;<vertical-offset>
;font-0 = Fira Code:size=10;2.5
font-0 = Google Sans:size=10;2
;font-0 = Proxima Soft:style=Regular:size=10;2.5
font-1 = FontAwesome5Free:style=Solid:size=10;2

modules-left = bspwm
modules-center = date
modules-right = temperature sep ram sep cpu sep battery sep pulseaudio sep wifi 
; The separator will be inserted between the output of each module
separator = " "
dim-value = 1.0
wm-name = bspwm
; Available positions:
;   left
;   center
;   right
;   none
tray-position = none
; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
tray-maxsize = 14
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
; Scale factor for tray clients
tray-scale = 1.0
wm-restack = bspwm
dpi-x = 96
dpi-y = 96
enable-ipc = false